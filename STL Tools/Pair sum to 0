#include<bits/stdc++.h>
void PairSum(int *arr, int n) {
    for(int i=0;i<n;i++){
        for(int j=i+1;j<n;j++){
            if(arr[i]+arr[j]==0){
                std::vector<int> a;
                a.push_back(arr[i]);
                a.push_back(arr[j]);
                sort(a.begin(),a.end());
                cout<<a[0]<<" "<<a[1]<<endl;
            }
        }
    }
}
